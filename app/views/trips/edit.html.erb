<h2>Edit Trip</h2>

<%= form_for @trip do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :duration %>
<%= f.text_field :duration %>

<%= f.label :user_id, 'Please do not change this number' %>
<%= f.number_field :user_id, :value => current_user.id %>



<div class="waves-effect waves-light btn">
<%= f.submit %>
</div>

<% end %>
