<h2>Your trips:</h2>
<hr>

<div class="waves-effect waves-light btn">
  <%= link_to 'Make a trip', new_trip_path, class: 'white-text' %>
</div>


<% if @trips.any? %>
<div class="">
  <% @trips.each do |trip| %>
    <div class="">
      <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="images/sample-1.jpg">
              <span class="card-title">Card Title</span>
            </div>
            <div class="card-content">
              <h4><%= trip.name %></h4>
            </div>
            <div class="card-action">
              <%= link_to 'Show Trip', trip_path(trip), class: '' %>
              <%= link_to 'Edit Trip', edit_trip_path(trip), class: '' %>
            </div>
            <div class="card-action">
              <%= link_to 'Delete Trip', trip_path(trip), method: :delete %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% else %>
  <h3 class="center-align">There are no trips to display. You need to get out more!</h3>
<% end %>
