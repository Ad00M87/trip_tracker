<h2 class="white-text"><%= @trip.name %></h2>

<h5 class="white-text">Trip-length: <%= @trip.duration %></h5>

<ul class="collapsible transparent" data-collapsible="accordion">
  <% @trip.locations.each do |location| %>
  <li >
    <div class="collapsible-header bg-format">
      <i class="material-icons">place</i>
      <h4><%= location.city %></h4>
    </div>
    <div class="collapsible-body">
      <span>
        <h2>This is a test</h2>
        <%= link_to 'Show Location', trip_location_path(@trip, location), class: 'btn' %>
      </span>
    </div>
  </li>
  <% end %>
</ul>
  <%= link_to 'Add Locations', new_trip_location_path(@trip), class: 'btn' %>
  <%= link_to 'Back to Trips', root_path, class: 'btn' %>
